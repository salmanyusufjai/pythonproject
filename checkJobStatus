# Function to check the status of the Dataflow job
def check_job_status(job_id):
    project_id = 'your-project-id'
    region = 'your-region'
    
    # Construct the URL for the Dataflow job status API
    url = f'https://dataflow.googleapis.com/v1b3/projects/{project_id}/locations/{region}/jobs/{job_id}'
    
    try:
        response = requests.get(url)
        response.raise_for_status()
        job_info = response.json()
        
        # Extract job status
        status = job_info.get('currentState')
        print(f"Job Status: {status}")

        return status
    except requests.RequestException as e:
        print(f"Error checking job status: {e}")
        return None
